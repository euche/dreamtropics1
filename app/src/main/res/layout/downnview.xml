<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="0dp"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_margin ="10dp"
    card_view:cardCornerRadius ="10dp">


<!-- @android:color/transparent-->





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:src="@drawable/w10d"
            android:id="@+id/fwicon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:id="@+id/dt"
            android:gravity="center"
            android:textSize="12sp"
            android:text="DATE: "
            android:textStyle="bold"
            android:layout_below="@id/fwicon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dt"
            android:layout_toEndOf="@id/dt"
            android:id="@+id/datetxt"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="WORKING TROPICS"
            android:layout_below="@id/fwicon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:text="TIME: "
            android:textStyle="bold"
            android:layout_below="@id/datetxt"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/t"
            android:layout_toEndOf="@id/t"
            android:layout_marginTop="12sp"
            android:id="@+id/timetxt"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="WORKING TROPICS"
            android:layout_below="@id/datetxt"/>



        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
